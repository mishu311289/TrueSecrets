<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg">
    
     <LinearLayout 
        android:layout_alignParentTop="true"
        android:id="@+id/Header"   
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/white"
    	android:layout_marginTop="-25dp"
      	android:orientation="vertical">
    <ImageView
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/navigation" />
    </LinearLayout>
    
<ScrollView 
   android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"    
    android:layout_marginTop="35dp"
    android:scrollbars="none">
 <LinearLayout 
        android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:paddingBottom="60dp"
    android:orientation="vertical">
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logo" />
     
 <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
   
    <TextView 
        android:id="@+id/secretCounter"
        android:text="Secret #1"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"
        android:textSize="42dp"
        android:textStyle="bold"
        />
    <TextView 
        android:id="@+id/secretTitle"
        android:layout_marginTop="5dp"
        android:text="@string/secret1_title"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"
        android:textSize="23dp"
        android:textStyle="bold"
        android:padding ="5dp"
        />
     <TextView 
        android:id="@+id/secretDesc_a"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/secret_1a"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:padding="10dip"
        android:gravity="center"/>
     
     
    <!-- <ImageView
         android:background="@drawable/secret1_map"        
        android:id="@+id/route_map"           
          android:layout_width="fill_parent"
         android:layout_height="wrap_content"
          />       
           -->
           <TextView 
                android:id="@+id/maptxt_a"
        		android:layout_marginTop="5dp"      
        		android:layout_marginBottom="2dp"    		
        		android:text="MAP"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:textColor="@color/app_base"
        		android:gravity="right"        		
        		android:background="@drawable/rounded"
        		android:textSize="20dp"
        		android:clickable="true"
        		android:layout_marginLeft="50dip"
        		android:padding="3dip"
        		android:paddingRight="5dip"/>
           
            <LinearLayout 
         		android:id="@+id/mapSubContainer"
         		android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:orientation="vertical"
         		android:background="@drawable/maprounded">    
           
            <TextView 
             	android:id="@+id/maptxtstring"
             	android:layout_marginTop="5dp"
             	android:layout_marginBottom="2dp"
        		android:text="@string/maptxtstring_1a"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:textColor="#ffffff"
        		android:textSize="14dp"
        		android:paddingLeft="20dp"
        		android:paddingRight="20dp"/>
           
     <LinearLayout 
         android:id="@+id/mapContainer"
         android:layout_width="fill_parent"
         android:layout_height="250dp"
         android:padding ="20dp"
         android:orientation="vertical"
         
         >
         
     </LinearLayout> 
     
      </LinearLayout>             
     
      <TextView 
        android:id="@+id/maptxt_b"        
        android:layout_marginBottom="5dp"
        android:text="SHOW ME WHERE TO LOOK"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"       
        android:clickable="true"
        android:gravity="right"
        android:textSize="17dp"
        android:padding="3dip"
        android:paddingRight="5dip"
        android:layout_marginLeft="50dip"
        android:background="@drawable/rounded"/> 
        
       <LinearLayout 
         		android:id="@+id/mapimageSubContainer"
         		android:layout_width="wrap_content"
         		android:layout_height="wrap_content"
         		android:orientation="vertical"
         		android:background="@drawable/maprounded">
        
       <ImageView
        android:id="@+id/mapimage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:visibility="gone"        
        android:adjustViewBounds="true"	
        android:padding ="20dp"
        android:layout_margin="20dip"
        android:layout_gravity="center"
        android:background="@drawable/roundedimg"/>
       
        </LinearLayout>
  
    <TextView 
        android:id="@+id/secretDesc_b"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="@string/secret_1b"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"/> 
     
     <TextView 
        android:layout_marginTop="10dp"
        android:id="@+id/secretCaption"
        android:layout_marginBottom="10dp"
        android:text="@string/secret_caption"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"       
        android:textColor="@color/app_base"        
        android:textStyle="bold"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:textSize="23dip"/> 
        
     <RelativeLayout android:id="@+id/getBackground"
         android:layout_width="wrap_content"
         android:clickable="true"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/button_bg">
         
	     <TextView
	         android:id="@+id/txtBackground"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#c3c3c3"
	         android:textSize="17sp"	         
	         android:layout_centerInParent="true"
	         android:layout_margin="10dp"
	         android:text="background"/>
	        
	     <ImageView
	         android:id="@+id/playBackground"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:src="@drawable/play"
	         android:layout_margin="2dp"
	         android:layout_toRightOf="@+id/txtBackground"
	         android:layout_centerVertical="true"/>     
	      
     </RelativeLayout>
  
     <TextView         
        android:layout_marginTop="10dp"
        android:id="@+id/readyToGo"
        android:text="@string/ready_to_go"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"        
        android:textStyle="bold"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:textSize="23dip"/>   
     <!--  <TextView         
        android:id="@+id/secretReady"
        android:layout_marginTop="10dp"
        android:text="@string/secret_ready"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"
        android:textSize="31dp"
        android:textStyle="bold"
        />   
        
     <TextView        
        android:id="@+id/txtPlay" 
        android:layout_marginTop="10dp"
        android:text="PRESS PLAY"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textColor="@color/app_base"
        android:textSize="32dp"
        android:textStyle="bold"
        />    -->
        
      <ImageButton
          android:id="@+id/play"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/play_main"/>
      
     <TextView 
        android:layout_marginTop="10dp"
        android:id="@+id/secretInsights"
        android:layout_marginBottom="10dp"
        android:text="@string/secret_insights"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"       
        android:textColor="@color/app_base"        
        android:textStyle="bold"
        android:padding ="20dp"
        android:textSize="23dip" />
    <!--  
     <Button
         android:id="@+id/postBackground"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/button_bg"
         android:textColor="#c3c3c3"
         android:textSize="18dp"
         android:textStyle="bold"
         android:layout_marginBottom="20dp"
         android:text="BONUS MATERIAL"/> -->
         
     <RelativeLayout android:id="@+id/postBackground"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:clickable="true"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/button_bg">
         
	     <TextView
	         android:id="@+id/txtBonus"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#c3c3c3"
	         android:textSize="17sp"
	         android:textStyle="bold"
	         android:layout_centerInParent="true"
	         android:layout_margin="10dp"
	         android:text="bonus material"/>
	        
	     <ImageView
	         android:id="@+id/playBonus"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:src="@drawable/play"
	         android:layout_margin="2dp"
	         android:layout_toRightOf="@+id/txtBonus"
	         android:layout_centerVertical="true"/>
     
     </RelativeLayout>
     
      <RelativeLayout android:id="@+id/thanklayout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:clickable="true"
         android:layout_gravity="center_horizontal"
         android:visibility="gone"
         android:layout_margin="10dip"
         android:background="@drawable/button_bg">
         
	     <TextView
	         android:id="@+id/thanktxt"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:textColor="#c3c3c3"
	         android:textSize="17sp"
	         android:textStyle="bold"
	         android:layout_centerInParent="true"
	         android:layout_margin="10dp"
	         android:text="thanks"/>
	        
	     <ImageView
	         android:id="@+id/playthanks"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:src="@drawable/play"
	         android:layout_margin="2dp"
	         android:layout_toRightOf="@+id/thanktxt"
	         android:layout_centerVertical="true"/>
     
     </RelativeLayout>
     
      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_marginTop="10dp"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >
          <LinearLayout 
              android:layout_width="0dp"           
              android:layout_weight="1"   
              android:layout_height="wrap_content"
              android:id="@+id/checkInLayout"
              android:layout_gravity="left"
              android:orientation="vertical"
              >
          <TextView         
	        android:layout_marginTop="10dp"
	        android:text="check in"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/app_base"
	        android:textSize="15dp"
	        android:textStyle="bold"
	        android:id="@+id/txtCheckIn"
          /> 
          <LinearLayout 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:orientation="horizontal"
              >
              <ImageButton 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/btnFb"
                  android:background="@drawable/fb"/>
              <ImageButton 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="2dp"
                  android:layout_marginRight="2dp"
                  android:id="@+id/btnFousquare"
                  android:background="@drawable/foursquare"/>
              <ImageButton 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/btnGooglePlus"
                  android:background="@drawable/googleplus"/>
          </LinearLayout>
          </LinearLayout>
          
          <LinearLayout 
              android:layout_width="0dp"           
              android:layout_weight="1"   
              android:layout_height="wrap_content"
              android:id="@+id/shareLayout"
              android:layout_gravity="right"
              android:orientation="vertical"
              >
          <TextView         
	        android:layout_marginTop="10dp"
	        android:text="share"
	        android:gravity="right"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/app_base"
	        android:textSize="15dp"
	        android:textStyle="bold"
	        android:id="@+id/txtShare"
          /> 
          <LinearLayout 
              android:layout_width="fill_parent"              
              android:layout_height="wrap_content"
              android:gravity="right"
              android:orientation="horizontal"
              >
              <LinearLayout 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:orientation="vertical"
                  >
                  <TextView
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text ="#truesecrets"
                      android:gravity="right"
                      android:textSize="11dp"
                      android:textColor="#ffffff"/>
                  
                  <TextView
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text ="@string/secret_tour"
                      android:textSize="11dp"
                      android:gravity="right"
                      android:textColor="#ffffff"/>
              </LinearLayout>
              <ImageButton 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/btnShare"
                  android:background="@drawable/share"/>
          </LinearLayout>
          </LinearLayout>
      </LinearLayout>
      
    </LinearLayout>
</LinearLayout>
</ScrollView>

</RelativeLayout>